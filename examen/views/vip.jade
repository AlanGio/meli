extends layout

block content

  nav.container-fluid
    .row.justify-content-center
      .col-md-10.breadcrumb

        each category, index in itemCategory.path_from_root

          if index < itemCategory.path_from_root.length - 1
            a(href='#')= category.name
            i.fas.fa-chevron-right
          else
            a(href='#')
             b= category.name


  section.container-fluid.vip
    .row.justify-content-center.top-product
      .col-10.top-product-container
        .row
          .col-8.image-container.text-center
            img.img-fluid.item-img(src=item.pictures[0].url, alt=item.title)
          .col-4
            .product-price
              p= ('vendidos ' + item.condition == 'used' ? 'Usado' : 'Nuevo' + ' - ' + item.sold_quantity + ' vendidos')
              h1= item.title
              h2= ('$' + item.price)
              a.btn.btn-primary.buy-button(href='#') Comprar
    .row.justify-content-center.bottom-product
      .col-10.bottom-product-container
        h2 DescripciÃ³n del Producto
        p= itemDescription.plain_text